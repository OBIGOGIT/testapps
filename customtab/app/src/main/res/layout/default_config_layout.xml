<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefaultConfigActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_default_config_width"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="width"
            android:text="" />
        <EditText
            android:id="@+id/input_default_config_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="height"
            android:text="" />
    </LinearLayout>


    <EditText
        android:id="@+id/input_default_config_hosturl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="host url"
        android:text="" />
    <EditText
        android:id="@+id/input_default_config_ua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="useragent"
        android:text="user agent" />
    <EditText
        android:id="@+id/input_default_config_zoomfactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="zoom factor"
        android:text="" />
    <EditText
        android:id="@+id/input_default_config_whitelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="white list : seperate ;"
        android:text="" />
    <Button
        android:id="@+id/btn_default_config_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close" />
    <Button
        android:id="@+id/btn_default_config_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save" />

    <Button
        android:id="@+id/btn_default_config_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make json" />
    <TextView
        android:id="@+id/btn_default_config_view_json"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLines="5"
        android:textSize="20sp"
        android:text="" />
</LinearLayout>