<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_width"
            android:inputType="number"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="width"
            android:text="" />
        <EditText
            android:id="@+id/input_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="height"
            android:text="" />
    </LinearLayout>
    <EditText
        android:id="@+id/input_hosturl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="host url"
        android:text="" />
    <EditText
        android:id="@+id/input_ua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="useragent"
        android:text="Mozilla/5.0 (X11; ccNC; Linux aarch64) AppleWebKit/537.36 (KHTML' like Gecko) Chrome/92.0.4515.131 Mobile Safari/537.36 " />
    <EditText
        android:id="@+id/input_zoomfactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="zoom factor"
        android:text="" />
    <EditText
        android:id="@+id/input_whitelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="white list : seperate ;"
        android:text="" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile"
        android:id="@+id/checkBox"/>
    <TextView
        android:id="@+id/view_json"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLines="5"
        android:text="TextView" />
    <Button
        android:id="@+id/btn_ctab_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="customtab open" />
    <Button
        android:id="@+id/btn_idt_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="intent open" />
    <Button
        android:id="@+id/btn_idt_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="json" />

</LinearLayout>